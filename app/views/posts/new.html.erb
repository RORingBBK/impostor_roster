<div class="new-submission">
  <h2>We all feel like impostors sometimes.</h2>
  <h3>Help us feel better by contributing:</h3>

  <div>
    <%= form_tag '/posts' do %>
      <div class="form-group">
        <%= label_tag "Field you are in:" %>
        <%= text_field_tag 'post[category]', @field, class: "form-control", placeholder: 'Your industry or topic for this confession' %>
      </div>
      <div class="form-group">
        <%= label_tag "Months of Experience:" %>
        <%= text_field_tag 'post[months_experience]', nil, class: "form-control", placeholder: '120' %>
      </div>
      <div class="form-group">
        <%= label_tag "Confession:" %>
        <%= text_field_tag 'post[inability]', nil, class: "form-control", placeholder: 'Remember which \'their\' is correct' %>
        <span class="hint">I still can't...</span>
      </div>
      <% if Rails.env.staging? || Rails.env.production? %>
        <div class="form-group">
          <%= recaptcha_tags %>
        </div>
      <% end %>
      <h4>You should probably check your spelling above.</h4>
        <%= submit_tag "Admit it!", class: "btn btn-primary" %>
    <% end %>
  </div>

  <nav>
    <%= link_to "Go Back", posts_path %>
  </nav>
</div>
